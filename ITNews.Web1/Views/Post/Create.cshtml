@using Syncfusion.EJ2
@model ITNews.Web1.Models.PostViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<hr />
<head>   
    <script src="~/js/autocomplete.js"></script>
</head>
<div class="row">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-6">
            <div class="form-group">
                <div>
                    @Html.DisplayNameFor(x => x.Category)
                </div>
                @Html.DropDownListFor(x => x.CategoryId, ViewBag.Categories as SelectList)
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShortDiscription" class="control-label"></label>
                <input asp-for="ShortDiscription" class="form-control" />
                <span asp-validation-for="ShortDiscription" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.EJS().RichTextEditor("Content").ToolbarSettings(e => e.Items((object)ViewBag.items)).InsertImageSettings(obj => obj.Display("inline").SaveUrl("/Post/SaveFile").Path("/Images/")).Value((string)ViewBag.value).Render()
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="Published" /> @Html.DisplayNameFor(model => model.Published)
                </label>
            </div>
        </div>
        
        <div>

            <div class="ui-widget">
                <label asp-for="Tag.Content" class="control-label"></label>
                <input asp-for="Tag.Content" id="tags" @*class="form-control"*@ />
                @*<span asp-validation-for="Tag.Content" class="text-danger"></span>*@
            </div>
        </div>
        <br/>
        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



