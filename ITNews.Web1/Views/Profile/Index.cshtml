@model ITNews.Web1.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<h2>Profile</h2>
<div>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet" />
    <script src="~/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
    <script src="~/js/editing.js"></script>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            @*<div>Amount rating: @ViewBag.AmountRating</div>*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <a href="#" id="firstName" data-type="text" data-pk="@Model.Id"
                   data-url="@Url.Action("ChangeFirstname", "Profile")"
                   data-title="Enter firstname">@Model.FirstName</a>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <a href="#" id="lastName" data-type="text" data-pk="@Model.Id"
                   data-url="@Url.Action("ChangeLastname", "Profile")"
                   data-title="Enter lastname">@Model.LastName</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Main" asp-action="Index">Back to Main</a>
</div>

